generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



// --- ENUMS ---
// Memastikan data kategori dan status konsisten di seluruh aplikasi
enum Category {
  Makanan
  Kerajinan
  Fashion
  Minuman
  Lainnya
}

enum Role {
  USER
  ADMIN
  PENJUAL
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Wajib untuk Credentials/JWT
  role          Role      @default(USER)
  
  // Relasi
  accounts      Account[]
  sessions      Session[]
  products      Product[] // Relasi ke produk yang dijual

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
enum StatusProduct {
  Pending
  Approved
  Rejected
}

// model Produk
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique 
  description String   @db.Text
  price       Int      
  discount    Int      @default(0) 
  stock       Int      @default(0)
  images      String[] 
  category    Category @default(Makanan)
  isFeatured  Boolean  @default(false) 
  status      StatusProduct @default(Pending)
  
  // Relasi ke User 
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Indexing untuk performa filter di database
  @@index([userId])
  @@index([category])
  @@index([isFeatured])
}
